<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#434C5E">


    <TextView
        android:id="@+id/textView"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:fontFamily="@font/regular"

        android:text="@string/serve"
        android:textColor="#D9D9D9"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/tv_selected_time"
        android:layout_width="100sp"
        android:layout_height="33sp"
        android:layout_marginTop="16dp"
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:inputType="text"
        android:textAllCaps="true"
        android:textColor="#D9D9D9"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_selected_date"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/list_tariff" />

    <TextView
        android:id="@+id/tv_selected_date"
        android:layout_width="100sp"
        android:layout_height="33sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:inputType="text"
        android:textAllCaps="true"
        android:textColor="#D9D9D9"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_tariff" />

    <TextView
        android:id="@+id/komentar"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24sp"
        android:fontFamily="@font/light"
        android:text="@string/coment"
        android:textColor="#9DA0A8"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/komenterinp"
        android:layout_width="0sp"
        android:layout_height="43sp"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp"
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="@font/regular"
        android:inputType="text"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="#D9D9D9"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/komentar" />

    <TextView
        android:id="@+id/maintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:fontFamily="@font/medium"
        android:text="@string/services"
        android:textColor="#D9D9D9"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/komenterinp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:fontFamily="@font/regular"
        android:text="Тариф"
        android:textColor="#D9D9D9"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/list_tariff"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginTop="16sp"
        android:background="#689194"
        android:radius="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_marginTop="2sp"
        android:minHeight="33sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maintext"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
