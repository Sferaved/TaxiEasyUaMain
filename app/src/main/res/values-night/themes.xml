<resources>
    <!-- Base application theme. -->
    <style name="Theme.TaxiEasyUaBack4App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/zamov</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/zamov</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <item name="android:overlapAnchor">true</item> <!-- Убирает лишние отступы -->
        <item name="android:paddingTop">0dp</item> <!-- Убирает отступ сверху -->
        <item name="android:paddingBottom">0dp</item> <!-- Убирает отступ снизу -->
        <item name="android:paddingLeft">0dp</item> <!-- Убирает отступ слева -->
        <item name="android:paddingRight">0dp</item> <!-- Убирает отступ справа -->
    </style>

    <style name="Theme.TaxiEasyUaBack4App.NoActionBar">
        <item name="android:windowBackground">@color/background_color_new</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.TaxiEasyUa.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TaxiEasyUa.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
<!--        <item name="android:background">#434C5E-->
<!--        </item> &lt;!&ndash; Replace #FF0000 with your desired color code &ndash;&gt;-->
<!--        <item name="android:textColor">@color/white-->
<!--        </item> &lt;!&ndash; Replace #FF0000 with your desired color code &ndash;&gt;-->
    </style>

    <style name="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="android:background">#434C5E
        </item> <!-- Replace #FF0000 with your desired color code -->
        <item name="android:textColor">#D9D9D9
        </item> <!-- Замените @color/custom_text_color на нужный цвет текста -->
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/zamov</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:listPreferredItemPaddingLeft">2sp
        </item> <!-- Измените правый отступ по своему усмотрению -->
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingRight">8sp
        </item> <!-- Измените правый отступ по своему усмотрению -->
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/medium</item>

    </style>

    <style name="LeftNavigation">
        <item name="android:background">@android:color/transparent</item>
        <item name="itemTextColor">@color/colorAccent</item>
    </style>

    <style name="ThemeOverlay.TaxiEasyUaBack4App.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.TaxiEasyUaBack4App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>


</resources>